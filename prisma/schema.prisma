generator client {
  provider = "prisma-client-js"
}

model Member {
  id      String   @id
  xp      Int      @default(0)
  level   Int      @default(0)
  Mutes   Mute?
  Tempban Tempban?
  Warns   Warns[]
}

model Mute {
  member   Member   @relation(fields: [memberId], references: [id])
  memberId String   @unique
  muteId   Int      @id @default(autoincrement())
  reason   String
  time     DateTime @default(now())
  duration Int
  active   Boolean  @default(true)
}

model Tempban {
  member   Member   @relation(fields: [memberId], references: [id])
  memberId String   @unique
  banId    Int      @id @default(autoincrement())
  reason   String
  time     DateTime @default(now())
  duration Int
  active   Boolean  @default(true)
}

model ReactionRoles {
  id      Int     @id @default(autoincrement())
  message String
  emoji   String
  role    String
  active  Boolean @default(true)
}

model Warns {
  member   Member   @relation(fields: [memberId], references: [id])
  memberId String
  warnId   Int      @id @default(autoincrement())
  reason   String
  time     DateTime @default(now())
  active   Boolean  @default(true)
}

model Meta {
  id    Int    @id @default(autoincrement())
  key   String
  value String
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
